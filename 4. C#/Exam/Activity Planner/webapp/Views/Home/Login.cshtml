<head>
    <link rel="stylesheet" type="text/css" href="css/register.css"/>
</head>
@model LogUser
<h1>Login Page</h1>

<div>
    <form method="post" asp-controller="Home" asp-action="ProcessLogin">
        <label>Email: </label>
        <span asp-validation-for="Email"></span>
        <input asp-for="Email" name="Email" type="text" class="form-control"/>
        <label>Password:</label>
        <span asp-validation-for="Password"></span>
        <input asp-for="Password" name="Password" type="password" class="form-control"/>
        <div class="login-page-buttons">
            <button class="btn btn-success spacer login-page-buttons">Login</button>
            <button class="btn btn-primary spacer " formaction="registerpage" formmethod="post">Register</button>
        </div>

    </form>
</div>
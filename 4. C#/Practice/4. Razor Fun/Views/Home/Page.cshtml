<!DOCTYPE html>
<html>
<head>
    
    <title>Page Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Home/HomePage.css" type="text/css">

</head>
<body>

<div class="ts">
    <h1>Here are some delecious Foods</h1>

    @{
        string[] SL = {"Apple Pie", "Burritos", "Clams", "Casino"};

        foreach (var variable in SL) {
            if (variable.StartsWith("c")||variable.StartsWith("C")) {
                <h1 class="ts red">@variable</h1>
                
            } else {
                <h1 class="ts">@variable</h1>
            }


        }
    }
</div>

</body>
</html>
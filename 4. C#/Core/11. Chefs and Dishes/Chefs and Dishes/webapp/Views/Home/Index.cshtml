@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet" type="text/css" href="css/Index.css"/>
</head>
<div class="text-center">
    <h2>Chefs | <a href="/dishes">Dishes</a></h2>
    <h6 class="btn btn-primary">
        <a href="newChef" class="clicker">Add a chef</a>
    </h6>
</div>

<div class="table-desc">
    <h5>Check out or roster of chefs!</h5>

    <table class="table table-dark">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col"># of Dishes</th>
        </tr>
        </thead>
        <tbody>
        @{
            foreach (var VARIABLE in ViewBag.Chefs) {
                <tr>
                    <td>@VARIABLE.FirstName @VARIABLE.LastName</td>
                    <td>
                        @( DateTime.Now.Year - VARIABLE.Dob.Year )
                    </td>
                    <td>
                        @VARIABLE.CreatedDishes.Count
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>

</div>